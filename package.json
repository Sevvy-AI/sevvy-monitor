{
  "name": "sevvy-monitor",
  "version": "1.0.0",
  "description": "AWS Lambda functions for monitoring logs from various sources",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:lambda": "npm run build && npm run bundle:all && npm run package",
    "bundle:all": "npm run bundle:cloudwatch && npm run bundle:cloudflare && npm run bundle:vercel && npm run bundle:datadog",
    "bundle:cloudwatch": "esbuild src/handlers/cloudwatch.ts --bundle --platform=node --target=node20 --outfile=dist/cloudwatch.js --format=cjs --external:@aws-sdk/* --minify --sourcemap --alias:@=src",
    "bundle:cloudflare": "esbuild src/handlers/cloudflare.ts --bundle --platform=node --target=node20 --outfile=dist/cloudflare.js --format=cjs --external:@aws-sdk/* --minify --sourcemap --alias:@=src",
    "bundle:vercel": "esbuild src/handlers/vercel.ts --bundle --platform=node --target=node20 --outfile=dist/vercel.js --format=cjs --external:@aws-sdk/* --minify --sourcemap --alias:@=src",
    "bundle:datadog": "esbuild src/handlers/datadog.ts --bundle --platform=node --target=node20 --outfile=dist/datadog.js --format=cjs --external:@aws-sdk/* --minify --sourcemap --alias:@=src",
    "package": "cd dist && zip -r ../deployment.zip . -x '*.map'",
    "dev": "tsx watch src/handlers/cloudwatch.ts",
    "dev:cloudflare": "tsx watch src/handlers/cloudflare.ts",
    "dev:vercel": "tsx watch src/handlers/vercel.ts",
    "dev:datadog": "tsx watch src/handlers/datadog.ts",
    "run:cloudwatch": "tsx src/integrations/cloudwatch/run-locally.ts",
    "run:cloudflare": "tsx src/integrations/cloudflare/run-locally.ts",
    "run:vercel": "tsx src/integrations/vercel/run-locally.ts",
    "run:datadog": "tsx src/integrations/datadog/run-locally.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format:fix": "prettier --write . --log-level warn",
    "lint:format:fix": "npm run lint:fix && npm run format:fix"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.821.0",
    "@aws-sdk/client-dynamodb": "^3.821.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-secrets-manager": "^3.840.0",
    "@aws-sdk/client-sqs": "^3.917.0",
    "@aws-sdk/client-sts": "^3.821.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.19.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
